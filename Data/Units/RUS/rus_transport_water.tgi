[Thing Template=AAUnitRUSSeaTransport]
{
	IDS = rus_transport_water
	name = "#rus_transport_water_name"
	editor_name = "#rus_transport_water_editor_name"

	[BodyComponent]
	{
		rot_time = 13
		sink_time = 5

		health = 50
		defense = 3
		
		[WhenHealth Template=FXC_CreateVFX]
	  	{
			vfx_ids = rus_infantry_death
			location = hitch
			health = 0.0
			health_trigger_type = ABSOLUTE_BELOW
	  	}
	}
	
	[MoverComponent]
	{
		speed_max = 3
		turn_radius = 2
	}
	
	[DenizenComponent]
	{
		[DeploymentInfo]
		{
			creation_offset = 0, 2.5
			deployment_offset = 0, 8
		}
	}
	
	[View]
	{
		resource_prefix = RUSTransportWater/RUSTransportWater

		[AspectNormal]
		{						
			[Animation Template=ObjectAnimationCustomPlay]
			ids = Unload
			length = 9
			kf = RUSTransportWater/RUSTransportWaterUnloadInfantry.kf
		}
	}

	[WhenEnter Template=FXC_PlayObjectAnimation]
	{
		actor_state = unloading
		object_animation_IDS = Unload
	}
	
	[WhenEnter Template=FXC_CreateVFX]
	{
		actor_state = structure_normal
		vfx_ids = rus_infantry_solid
		at = SELF
		location = hitch
		attached = true
	}
	
	[WhenEnter Template=FXC_StopVFX]
	{
		actor_state = dead
		vfx_ids = rus_infantry_solid
	}
	
	[WhenEnter Template=FXC_StopVFX]
	{
		actor_state = unloading
		vfx_ids = rus_infantry_solid
	}
	
	[WhenEnter Template=FXC_CreateVFX]
	{
		actor_state = unloading
		vfx_ids = rus_infantry_fade
		at = SELF
		location = hitch
		attached = true
	}
}
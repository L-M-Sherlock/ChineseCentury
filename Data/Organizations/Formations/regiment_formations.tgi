[Formation template=Formation]
{
	IDS = regiment_aggressive
	name = "#regiment_formations_regiment_aggressive_name"
	organized = true
	aggressive = true
	icon = FormationIcons/FormationIconAssault.png
	
	group_formation_ids = group_aggressive

	[Property template=ModifierProperty]
	{
		name = "#regiment_formations_regiment_aggressive_Property_name"
		icon = /Properties/PropertyIcons/IconPropertyFormationAssault.png

		[Modifier template=MultiplyModifier]
		attribute = SPEED_MAX
		amount = -.25
	}
}


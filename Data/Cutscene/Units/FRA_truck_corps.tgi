[Template AAUnitGBRVehicleHQTruckCorp Template=AAUnitGBRVehicleHQTruck]
{
	name = "#FRA_truck_corps_AAUnitGBRVehicleHQTruckCorp_name"
	
	[BodyComponent]
	{
		health = 500
		defense = 2
	}

	[EconomyComponent]
	{
		[Cost]
		money = 400
		
		[Production]
		money = 12
		ammo = 10
		oil = 5
	}

	[MobileDeploymentComponent]
	{
		unpack_to_actor_ids = fra_corps
		
		packed_position_offset = 0,0
		packed_orientation = 1,0
	}

	[MoverComponent]
	{
		speed_max = 3

		;; ids of the trailer actor
		trailer_actor = gbr_trailer_corps

		[TrailerHitch]
		{		
			;; node name and node offset of the truck's hitch
			node_ids = hitch
			node_offset = 0, -1.7, .5
		}
	}
	
	[PropertiesComponent]
	{	
		[Property]
		property_IDS = corpshq	
	}	
	
	[View]
	{
		resource_prefix = FRATruck/GBRTruck
		icon = /UI/Game/BuildingButtons/IconCorps.png

		[WhenCreated Template=FXC_PlaySFX]
		audio_ids = gbr_truck_deployed
		
		[WhenSelected Template=FXC_PlaySFX]
		audio_ids = corps_select
		
	}
}


[Thing Template=AAUnitGBRVehicleHQTruckCorp]
{
	IDS = FRA_truck_corps
	editor_name = "#FRA_truck_corps_Thing_editor_name"
}

[Thing Template=AAUnitGBRVehicleHQTruckCorp]
{
	IDS = FRA_truck_corps_dynamic
	editor_name = "#FRA_truck_corps_dynamic_editor_name"

	[MobileDeploymentComponent]
	{
		unpack_to_actor_ids = FRA_corps_dynamic
	}

	[Placement]
	placement_group_ids = null
}


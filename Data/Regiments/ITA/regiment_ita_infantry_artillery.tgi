[Thing Template=AAitaOrganizationArtillery]
{
	IDS = regiment_ita_infantry_artillery
	name = "#regiment_ita_infantry_artillery_name"
	editor_name = "#regiment_ita_infantry_artillery_editor_name"

	[EconomyComponent]
	{
		[Cost]
		money = 52
		
		[Upkeep]
		ammo = 9
	}

	[PropertiesComponent]
	{
		[Property]
		property_IDS = org_infantry

		[Property]
		property_ids = artillery_company
	}
	
	[View]
	{
		resource_prefix = /Units/ita/itaInfantryMortar/itaInfantryMortar
		icon = /UI/Game/RegimentButtons/IconInfantryArtillery.png

		[WhenSelected Template=FXC_PlaySFX]
		audio_ids = ita_infantry_artillery_select

		[WhenCommanded Template=FXC_PlaySFX]
		audio_ids = ita_infantry_artillery_move

		[WhenCommandedAggressive Template=FXC_PlaySFX]
		audio_ids = ita_infantry_artillery_attack
	}		
	
	[OrganizationComponent Template=AAInfantryOrganizationComponent]
	{	
		layout_IDS = regiment_infantry
		
		[Slot]	;; front
		element_IDS = ita_infantry
		
		[Slot]	;; rear guard 1
		element_IDS = ita_infantry

		[Slot]	;; rear guard 2
		element_IDS = ita_infantry
		
		[Slot]	;; rear guard 3
		element_IDS = ita_infantry_mg
	
		[Slot]	;; flank
		element_IDS = ita_infantry_mortar
		
		[Slot]	;; captain
		element_IDS = ita_infantry_co
	}
	
	[ExperienceComponent template=AAInfantryExperienceComponent]
}

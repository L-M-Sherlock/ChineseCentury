[Thing Inherit=AATrailer]
{
	IDS = chn_trailer_corps
	name = "#chn_trailer_corps_name"
	editor_name = "#chn_trailer_corps_editor_name"

	[MoverComponent]
	{
		[TrailerHitch]		
		;; node name and node offset of the truck's hitch
		node_ids = hitch
		node_offset = 0, 1, .5
	}

	[View]
	{
		resource_prefix = CHNTrailerCorps/CHNTrailerCorps
	}
}

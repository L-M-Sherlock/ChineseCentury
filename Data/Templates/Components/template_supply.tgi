[template SupplyComponent]
{
	;; meter radius
	fixed	supply_range

	;; is actor a relay in a supply chain (i.e. does actor need to be connected to non-relay
	;; (primary) in order to provide supply)
	flag	is_relay = false

	;; maximum supply stockpile a relay can keep (charge up to) in seconds
	;; NOTE: only valid if is_relay is true
	fixed	stockpile_max = 0
}

